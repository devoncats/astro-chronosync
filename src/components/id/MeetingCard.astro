---
import CaretLeftIcon from '@/icons/caret-left.astro'

interface Props {
    id: string
    name: string
    description: string
    duration: string
}

const { id, name, description, duration } = Astro.props
---

<a
    href={`${id}/${duration}`}
    class='border-t w-96 h-36 flex py-2 justify-center text-lg font-medium rounded hover:bg-gray-200 group transition-colors delay-100 cursor-pointer overflow-hidden'
>
    <div class='flex flex-col gap-2 px-2'>
        <div class='flex items-center gap-8'>
            {name}
            <div
                class='group-hover:translate-x-full transition-transform delay-75'
            >
                <CaretLeftIcon />
            </div>
        </div>
        <div>
            <p class='text-xs font-light'>
                {description}
            </p>
        </div>
    </div>
</a>

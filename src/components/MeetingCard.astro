---
import CaretLeftIcon from "@/icons/caret-left.astro";

interface Props {
  id: string;
  name: string;
  description: string;
  duration: string;
}

const { id, name, description, duration } = Astro.props;
---

<a
  href={`${id}/${duration}`}
  class="border-t w-96 flex py-2 justify-center text-lg font-medium rounded hover:bg-gray-200 transition-colors delay-100 cursor-pointer"
>
  <div class="flex flex-col gap-2 px-2">
    <div class="flex items-center gap-8">
      {name}
      <CaretLeftIcon />
    </div>
    <div>
      <p class="text-xs font-light">
        {description}
      </p>
    </div>
  </div>
</a>
